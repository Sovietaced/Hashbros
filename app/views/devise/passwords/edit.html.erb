<div class="single-widget-container">
	<section class="widget login-widget">
		<header class="text-align-center">
			<h2>Change your password</h2>
		</header>
		<div class="body">
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'no-margin' }) do |f| %>
				<%= devise_error_messages! %>
				<fieldset>
					<%= f.hidden_field :reset_password_token %>
					<div class="form-group">
						<%= f.label :password, "New password" %>
						<div class="input-group input-group-lg">
							<span class="input-group-addon">
								<i class="fa fa-lock"></i>
							</span>
							<%= f.password_field :password, :autofocus => true, :class => 'form-control input-lg' %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :password_confirmation, "Confirm new password" %>
						<div class="input-group input-group-lg">
							<span class="input-group-addon">
								<i class="fa fa-lock"></i>
							</span>
							<%= f.password_field :password_confirmation, :class => 'form-control input-lg' %>
						</div>
					</div>
				</fieldset>
				<div class="form-actions">
					<div><%= f.submit "Change my password", :class => 'btn btn-block btn-lg btn-danger' %></div>
					<div class="forgot">
						<%= render 'devise/shared/links' %>
					</div>
				</div>
			<% end %>
		</div>
	</section>
</div>
