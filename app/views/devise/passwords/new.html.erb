<div class="single-widget-container">
	<section class="widget login-widget">
		<header class="text-align-center">
			<h4>Forgot your password?</h4>
		</header>
		<div class="body">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			<%= devise_error_messages! %>
			<form class="no-margin" action="index.html" method="get" />
				<fieldset>
					<div class="form-group">
						<label for="email"><%= f.label :email %></label>
						<div class="input-group input-group-lg">
							<span class="input-group-addon">
								<i class="fa fa-envelope"></i>
							</span>
							<%= f.email_field :email, :autofocus => true, :class => 'form-control input-lg' %>
						</div>
					</div>
				</fieldset>
				<div class="form-actions">
					<button name="commit" type="submit" class="btn btn-block btn-lg btn-danger">
						<span class="small-circle"><i class="fa fa-caret-right"></i></span>
						<small>Send me reset password instructions</small>
					</button>
					<div class="forgot">
					<%= render "devise/shared/links" %>
				</div>
			</form>
			<% end %>
		</div>
	</section>
</div>
