<div class="content container">
	<div class="row">
		<div class="col-md-12">
			<h2 class="page-title">Set your PIN</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<section class="widget">
				<div class="body">
					<%= form_tag(set_pin_path, :method => 'post') do %>
					<fieldset>
						<div class="form-group no-margin">
							<label for="new_pin">New PIN</label>
							<div class="input-group input-group-lg">
								<span class="input-group-addon">
									<i class="fa fa-lock"></i>
								</span>
								<%= text_field_tag :new_pin, nil, class: 'form-control', maxlength: 4, size: 5 %>
							</div>
						</div>
						<div class="form-group no-margin">
							<label for="new_pin_confirmation">New PIN Confirmation</label>
							<div class="input-group input-group-lg">
								<span class="input-group-addon">
									<i class="fa fa-lock"></i>
								</span>
								<%= text_field_tag :new_pin_confirmation, nil, class: 'form-control', maxlength: 4, size: 5 %>
							</div>
						</div>
						<%= hidden_field_tag 'code', params[:code] %>
					</fieldset>
					<div class="form-actions">
						<%= submit_tag "Set PIN", class: 'btn btn-block btn-lg btn-info' %>
					</div>
					<% end %>
				</div>
			</section>
		</div>
	</div>
</div>
