	<header>
		<h4>HashBros Basic Stats</h4>
	</header>
	<div class="body">
		<div class="row">
			<div class="col-md-6">
				<div class="box">
					<div class="big-text">
						<%= get_new_users_in_24_hours_count %>
					</div>
					<div class="description">
						<i class="fa fa-user"></i>
