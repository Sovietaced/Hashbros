<div class="modal fade" id="verify-credentials-modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Please verify your credentials</h4>
				<p class="response"></p>
			</div>
			<%= form_tag("/payouts/redeem", method: "post") do %>
				<div class="modal-body">
					<fieldset>
						<% if current_user.gauth_enabled? %>
						<div class="form-group no-margin">
							<label for="gauth_code">2-Factor Authentication Code</label>
							<div class="input-group input-group-lg">
								<span class="input-group-addon">
									<i class="fa fa-lock"></i>
								</span>
								<%= text_field_tag :gauth_code, nil, class: 'form-control', maxlength: 6, size: 5 %>
							</div>
						</div>
						<% end %>
						<div class="form-group no-margin">
							<label for="pin">PIN</label>
							<div class="input-group input-group-lg">
								<span class="input-group-addon">
									<i class="fa fa-lock"></i>
								</span>
								<%= password_field_tag :pin, nil, class: 'form-control', maxlength: 4, size: 5 %>
							</div>
						</div>
						<div class="form-group">
							<label for="password">Current Password</label>
							<div class="input-group input-group-lg">
								<span class="input-group-addon">
									<i class="fa fa-lock"></i>
								</span>
								<%= password_field_tag :password, nil, class: 'form-control input-lg' %>
							</div>
						</div>
					</fieldset>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
					<button type="verify" class="btn btn-primary">Verify Credentials</button>
					<button type="submit" class="btn btn-primary">Submit Redemption Request</button>
				</div>
			<% end %>
		</div>
	</div>
</div>
