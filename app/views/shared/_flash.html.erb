<% if flash.present? %>
  <div class="container flash">
    <% flash.each do |name, msg| -%>
      <div class="alert <% if name.to_s == 'notice' %>alert-info<% elsif name.to_s == 'error' %>alert-danger<% else %>alert-success<% end %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
      </div>
    <% end -%>
  </div>
<% end %>
